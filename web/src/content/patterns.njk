<h1>Samenwerking</h1>


<svg style="border: 2px solid black;" id="graph"></svg>

<script src="https://d3js.org/d3.v7.min.js"></script>
<script>
    document.addEventListener("DOMContentLoaded", function () {
        const graph = {{ members.graph | dump | safe }};

      //  console.log(graph.nodes, graph.links)


        const width = 800;
        const height = 600;

        const svg = d3.select("#graph")
            .attr("viewBox", [0, 0, width, height])
            .call(d3.zoom()
                .scaleExtent([0.1, 8])   // Min and max zoom
                .on("zoom", zoomed)
            );

        const container = svg.append("g");  // All elements go in here

        function zoomed(event) {
            container.attr("transform", event.transform);
        }

        const color = d3.scaleOrdinal(d3.schemeCategory10);

        const link = container.append("g")
            .attr("stroke", "#aaa")
            .selectAll("line")
            .data(graph.links)
            .join("line")
            .attr("stroke-width", d => d.weight * 3); // thicker line = stronger similarity


        const label = container.append("g")
            .selectAll("text")
            .data(graph.nodes)
            .join("text")
            .text(d => d.name)
            .attr("font-size", "10px")
            .attr("dx", 8)
            .attr("dy", "0.35em");

        const simulation = d3.forceSimulation(graph.nodes)
            .force("link", d3.forceLink(graph.links).id(d => d.id).distance(200))
            .force("charge", d3.forceManyBody().strength(-50))
            .force("center", d3.forceCenter(width / 2, height / 2))
            .on("tick", ticked);

// Now drag function is safe to use because simulation is defined
        const node = container.append("g")
            .attr("stroke", "#fff")
            .attr("stroke-width", 1.5)
            .selectAll("circle")
            .data(graph.nodes)
            .join("circle")
            .attr("r", 5)
            .attr("fill", d => d.color || color(d.party))
            .call(drag(simulation));  // Move this *after* simulation is declared


        function ticked() {
            link
                .attr("x1", d => d.source.x)
                .attr("y1", d => d.source.y)
                .attr("x2", d => d.target.x)
                .attr("y2", d => d.target.y);

            node
                .attr("cx", d => d.x)
                .attr("cy", d => d.y);

            label
                .attr("x", d => d.x)
                .attr("y", d => d.y);
        }

        function drag(simulation) {
            function dragstarted(event, d) {
                if (!event.active) simulation.alphaTarget(0.3).restart();
                d.fx = d.x;
                d.fy = d.y;
            }

            function dragged(event, d) {
                d.fx = event.x;
                d.fy = event.y;
            }

            function dragended(event, d) {
                if (!event.active) simulation.alphaTarget(0);
                d.fx = null;
                d.fy = null;
            }

            return d3.drag()
                .on("start", dragstarted)
                .on("drag", dragged)
                .on("end", dragended);
        }
    });
</script>
